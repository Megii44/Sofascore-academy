<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_bg</item>
        <item name="colorPrimaryDark">@color/blue_bg_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Widget.Theme.MiniSofascore.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="android:colorPrimary">@color/light_blue_400</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_bg</item>
        <item name="colorPrimaryDark">@color/blue_bg_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
