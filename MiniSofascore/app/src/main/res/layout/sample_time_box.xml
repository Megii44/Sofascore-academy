<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/time_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="4dp"
    android:paddingTop="10dp"
    android:paddingEnd="4dp"
    android:paddingBottom="10dp">

        <TextView
            android:id="@+id/start_time"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="13:00"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/over_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/over_time"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="FT"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_time"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/logo_team_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_football"
            app:layout_constraintStart_toEndOf="@id/start_time"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo_team_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_football"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/start_time"
            app:layout_constraintTop_toBottomOf="@id/logo_team_1" />

        <TextView
            android:id="@+id/title_team_1"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Manchester United"
            app:layout_constraintBottom_toTopOf="@+id/title_team_2"
            app:layout_constraintStart_toEndOf="@id/logo_team_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/title_team_2"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Barcelona"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo_team_2"
            app:layout_constraintTop_toBottomOf="@+id/title_team_1"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/score_team_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@+id/score_team_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/score_team_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score_team_1"
            app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>